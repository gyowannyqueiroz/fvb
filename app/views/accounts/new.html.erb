<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h1 class="card-title">New account</h1>
    <%= form_for @account do |f| %>
      <div class="form-group">
        <div id="client_select" class="form-group">
          <label for="<%= :parent_account %>">Client</label>
          <%= f.collection_select :client_id, Client.all, :id, :name, { :prompt => "Select client..." }, { :class => "form-control" } %>
        </div>
        <div id="currency_select" class="form-group">
          <label for="<%= :currency %>">Currency</label>
          <%= f.collection_select :currency_id, Currency.all, :id, :name, { :prompt => "Select currency..." }, { :class => "form-control" } %>
        </div>
        <div class="form-group">
          <label for="<%= :initial_amount %>"><%= f.label :initial_amount %></label>
          <%= f.number_field :initial_amount, :class => "form-control" %>
        </div>

        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
<%= javascript_pack_tag('account.js') %>
